<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE9E9"
    tools:context="com.example.joovictorfirmino.stressless3.Login">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:src="@drawable/stress" />

    <LinearLayout
        android:id="@+id/formLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bgImage"
        android:layout_marginTop="22dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="senha"
            android:inputType="textPassword"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/formLogin"
        android:layout_marginTop="23dp"
        android:background="#ef1137"
        android:text="Logar" />

    <TextView
        android:id="@+id/textCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bgImage"
        android:layout_below="@+id/btnLogar"
        android:layout_marginTop="20dp"
        android:text="NÃ£o tem conta? Crie sua conta!"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textNovo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trocar ou esqueceu a senha!"
        android:textColor="#000"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textCadastro"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
